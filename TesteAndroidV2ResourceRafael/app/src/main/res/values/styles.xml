    </style>


    <style name="AppTheme.BotaoBranco.FundoAzul">
        <item name="android:background">@drawable/btn_azul</item>
    </style>


    <style name="AppTheme.EditText">
        <item name="android:background">@drawable/edt_text</item>

    </style>


</resources>
