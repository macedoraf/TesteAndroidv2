<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/preto</item>
    </style>


    <style name="AppTheme.BotaoBranco">

        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">18sp</item>

    </style>


    <style name="AppTheme.BotaoBranco.FundoAzul">
        <item name="android:background">@drawable/btn_azul</item>
    </style>


    <style name="AppTheme.EditText">
        <item name="android:background">@drawable/edt_text</item>
        <item name="android:textColorHint">@color/edt_border</item>

    </style>


    <style name="AppTheme.FonteHalvetica">
        <item name="android:textColor">@color/cinza_escuro</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
    </style>

    <style name="AppTheme.FonteHalveticaLight">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/cinza_escuro</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
    </style>

    <style name="AppTheme.FonteHalveticaLight.Preto">
        <item name="android:textColor">@color/preto</item>
    </style>

    <style name="AppTheme.FonteHalveticaLight.Cinza">
        <item name="android:textColor">@color/cinza_claro</item>
    </style>


    <style name="AppTheme.FonteHalvetica.Preto">
        <item name="android:textColor">@color/preto</item>
    </style>

    <style name="AppTheme.FonteHalvetica.Cinza">
        <item name="android:textColor">@color/cinza_claro</item>
    </style>

    <style name="AppTheme.FonteHalvetica.Branco">
        <item name="android:textColor">@color/branco</item>
    </style>

    <style name="AppTheme.FonteHalveticaLight.Branco">
        <item name="android:textColor">@color/branco</item>
    </style>


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>




</resources>
